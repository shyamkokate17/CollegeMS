@model IEnumerable<CollegePortal.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Departments</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DptName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DptName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.DptID">Edit</a> |
                <a class="btn btn-danger" asp-action="Details" asp-route-id="@item.DptID">Details</a> |
                <a class="btn btn-secondary" asp-action="Delete" asp-route-id="@item.DptID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
